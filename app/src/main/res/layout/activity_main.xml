<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/scoreLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="Score:"
        android:textStyle="bold"
        android:textColor="#00264d"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/lifeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="Life:"
        android:textStyle="bold"
        android:textColor="#00264d"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/startLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Tap to start"
        android:textColor="#ff0000"
        android:textStyle="bold"
        android:textSize="25sp" />

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/hero"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/hero"
        android:layout_gravity="center_vertical"/>

    <ImageView
        android:id="@+id/ball"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ball5"
        />

     <ImageView
            android:id="@+id/ball2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ball"
        />

        <ImageView
            android:id="@+id/ball3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ball2"
            />

        <ImageView
            android:id="@+id/ball4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ball3"
            />

        <ImageView
            android:id="@+id/ball5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ball4"
            />


        <ImageView
            android:id="@+id/enemy"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/bomb"
            />

        <ImageView
            android:id="@+id/enemy2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/bomb2"
            />

    </FrameLayout>
</LinearLayout>